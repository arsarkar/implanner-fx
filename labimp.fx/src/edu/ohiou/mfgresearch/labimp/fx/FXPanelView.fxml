<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import edu.ohiou.mfgresearch.labimp.fx.DrawFXCanvas?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.AnchorPane?>

<fx:root prefHeight="800.0" prefWidth="1000.0" type="BorderPane"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="File">
					<items>
						<MenuItem fx:id="openFileMI" onAction="#handleOpenFileAction"
												mnemonicParsing="false" text="Open File" />
						<MenuItem fx:id="exitMI" onAction="#handleExitAction"
													mnemonicParsing="false" text="Exit" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Edit">
					<items>
						<MenuItem fx:id="clearAllMI" onAction="#handleClearAllAction"
												mnemonicParsing="false" text="Clear All" />
						<MenuItem fx:id="showAllMI" onAction="#handleShowAllAction"
												mnemonicParsing="false" text="Show All" />
						<MenuItem fx:id="hideAllMI" onAction="#handleHideAllAction"
												mnemonicParsing="false" text="Hide All" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<left>
		<TableView fx:id="targetView" prefHeight="600.0" prefWidth="311.0"
			BorderPane.alignment="CENTER">
			<columns>
				<TableColumn fx:id="targetCol" maxWidth="5000.0"
					minWidth="10.0" prefWidth="100.0" text="Target" />
				<TableColumn fx:id="visiblityCol" maxWidth="5000.0" minWidth="10.0"
					prefWidth="60.0" text="Visibility" />
				<TableColumn fx:id="setActiveCol" prefWidth="60.0" text="Set Active" />
			</columns>
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
		</TableView>
	</left>
	<center>
		<SplitPane dividerPositions="0.70" orientation="VERTICAL"
			prefHeight="200.0" prefWidth="160.0" BorderPane.alignment="CENTER">
			<items>		
				<DrawFXCanvas fx:id="canvas" />
				<StackPane fx:id="viewPanel" prefHeight="200.0" prefWidth="200.0" />
			</items>
		</SplitPane>
	</center>
</fx:root>
